@import '_settings'

normalize-css()
base()

height = 40px

.neils-video-container
  position relative

  video
    width 100%
    display block 

.neils-video-play-bar
  position relative
  width 100%
  height height
  box-sizing border-box
  overflow hidden
  cursor pointer

.neils-video-play-bar-positioner
  position absolute
  left 10px
  right 10px
  height 100%

  &:before
    content ''
    display block
    position absolute
    height 100%
    left -10px
    width 10px
    background rgba(0, 0, 0, .5)

.neils-video-progress-bar
  position absolute
  left 0
  height 100%
  background rgba(0, 0, 0, .5)

.neils-video-play-head
  position absolute
  height 100%
  background black
  cursor grab

  &[data-is-dragging="true"]
    cursor grabbing

.neils-video-play-head-label
  position absolute
  top 0
  padding 0 5px;
  height 100%
  line-height height
  color white

.neils-video-heatmap
  position relative
  margin-top 10px
  height 40px
  width 100%

.neils-video-heatmap-moment
  position absolute
  height 100%
  background rgba(0, 0, 0, .05)

  &[data-played="1"]
    background #f4eb8c 

  &[data-played="2"]
    background #f5d371 

  &[data-played="3"]
    background #f4b264 

  &[data-played="4"]
    background #f8875f 

  for i in (5..15)
    &[data-played=\"{i}\"]
      background #ea5849 
    
.neils-video-stats
  margin-top 10px
  margin-bottom 10px

  &.exceeded
    color red
