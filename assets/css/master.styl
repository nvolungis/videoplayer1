@import '_settings'

normalize-css()
base()

body
  padding: 50px

  .max-width
    margin 0 auto
    max-width 1200px

  .headling 
    text-align center 

  .neils-video-container
    position relative

    video
      width 100%
      display block 

  .neils-video-play-bar
    position relative
    width 100%
    height 40px
    box-sizing border-box

  .neils-video-play-bar-positioner
    position absolute
    left 10px
    right 10px
    height 100%

    &:before
      content ''
      display block
      position absolute
      height 100%
      left -10px
      width 10px
      background rgba(0, 0, 0, .5)

  .neils-video-progress-bar
    position absolute
    left 0
    height 100%
    background rgba(0, 0, 0, .5)


  .neils-video-play-head
    position absolute
    right: -10px
    height 100%
    width 20px
    background black

  .heatmap
    position relative
    margin-top 10px
    height 40px
    width 100%

  .heatmap-moment
    position absolute
    height 100%
    background rgba(0, 0, 0, .05)

    &[data-played="1"]
      background #f4eb8c 

    &[data-played="2"]
      background #f5d371 

    &[data-played="3"]
      background #f4b264 

    &[data-played="4"]
      background #f8875f 

    for i in (5..15)
      &[data-played=\"{i}\"]
        background #ea5849 
      
.stats
  margin-top 10px

  &.exceeded
    color red
 




