@import '_settings'

normalize-css()
base()

body
  padding: 50px

  .neils-video-container
    position relative
    display: inline-block

    video
      display block 

  .neils-video-play-bar
    position relative
    width 100%
    height 40px
    box-sizing border-box

  .neils-video-play-bar-positioner
    position absolute
    left 10px
    right 10px
    height 100%

    &:before
      content ''
      display block
      position absolute
      height 100%
      left -10px
      width 10px
      background rgba(0, 0, 0, .5)

  .neils-video-progress-bar
    position absolute
    left 0
    height 100%
    background rgba(0, 0, 0, .5)


  .neils-video-play-head
    position absolute
    right: -10px
    height 100%
    width 20px
    background black

  .heatmap
    position relative
    margin-top 10px
    height 40px
    width 100%

  .heatmap-moment
    position absolute
    height 100%
    background rgba(255, 0, 0, .05)

    for i in (1..10)
      &[data-played=\"{i}\"]
        background rgba(255, 0, 0, (i/10))
      

  




